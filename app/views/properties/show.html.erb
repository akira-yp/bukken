<p id="notice"><%= notice %></p>
<h2>閲覧</h2>
<p>
  <strong>物件名:</strong>
  <%= @property.property_name %>
</p>
<p>
  <strong>賃料:</strong>
  <%= @property.rent %>円
</p>
<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>
<p>
  <strong>築年数:</strong>
  <%= @property.age %>年
</p>
<p>
  <strong>備考:</strong>
  <%= @property.remarks %>
</p>
<hr>
<% @property.stations.each_with_index do |station,index| %>
<h2>最寄駅<%= index + 1 %></h4>
<div class="">
  <p>
    <strong>路線名:</strong>
    <%= station.line %>
  </p>
    <strong>駅名:</strong>
    <%= station.station_name %>
  <p>
    <strong>徒歩分数:</strong>
    <%= station.minutes_walk %><span>分</span>
  </p>
</div>
<br>
<% end %>
<%= link_to 'Edit', edit_property_path(@property) %> |
<%= link_to 'Back', properties_path %>
